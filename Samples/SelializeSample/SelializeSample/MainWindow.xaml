<Window x:Class="SelializeSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">

    <Grid x:Name="LayoutRoot" Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button x:Name="BinaryFormatterButton"
                Margin="4"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="BinaryFormatterButton_Click"
                Content="BinaryFormatter"
                Padding="2,4" />

        <Button x:Name="XmlSerializerButton"
                Grid.Row="1"
                Margin="4"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="XmlSerializer"
                Padding="2,4" Click="XmlSerializerButton_Click" />
    </Grid>
</Window>
