<Window x:Class="AppCenter.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppCenter.Wpf"
        mc:Ignorable="d"
        Loaded="MainWindow_OnLoaded"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <UniformGrid Margin="12" Rows="4" Columns="4">
            <UniformGrid.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="12,8"></Setter>
                </Style>
            </UniformGrid.Resources>
            <Button Content="Test Button" Click="TestButton_OnClick"></Button>
            <Button Content="Music Event Button" Click="MusicEventButton_OnClick"></Button>
            <Button Content="Crash" Background="Red" Foreground="White" Click="CrashButton_OnClick"></Button>
            <Button Content="Exception" Background="Yellow" Foreground="Black" Click="ExceptionButton_OnClick"></Button>
        </UniformGrid>
    </Grid>
</Window>
