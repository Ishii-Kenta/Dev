<Window x:Class="MediaPlayerNoiseApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MediaPlayerNoiseApp"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="525"
        Height="350"
        Loaded="MainWindow_OnLoaded"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border>
            <StackPanel Margin="12,4" Orientation="Horizontal">
                <Button x:Name="PlayButton"
                        Click="PlayButton_OnClick"
                        Content="Play"
                        Padding="12,2" />
            </StackPanel>
        </Border>
        <ListBox x:Name="FileNamesListBox" Grid.Row="1" />
    </Grid>
</Window>
